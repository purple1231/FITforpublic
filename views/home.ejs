        /* Enhanced Arrow Styles with Animations */
        .arrow-overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          pointer-events: none;
          z-index: 5;
        }

        .arrow-line {
          position: absolute;
          height: 3px;
          border-radius: 2px;
          transform-origin: left center;
          opacity: 0;
          animation: drawArrowLine 1.2s ease-out forwards;
